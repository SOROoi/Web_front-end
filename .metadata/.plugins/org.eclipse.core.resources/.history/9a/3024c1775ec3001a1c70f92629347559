<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="js/vue.js"></script>

</head>
<body>
	<div id="app">
		<!-- {{}} -->
		<!-- v-text -->
		<!-- v-html -->
		<!-- v-on 简化写法： @事件 -->
		<h1>
			<span v-text="name"></span> Hello! <br> {{num}} 位朋友!{{message}} <br> <span v-html="word"></span>
		</h1>
		<input type="text" v-model="num" @click="num++">
		<button @click="num++">增加</button>
		<br>
		<button @click="sayhi('大家都好！')">打招呼</button>
		
		<!-- v-model -->
		<hr>
		请选择你的晚餐： <br>
		<input type="checkbox" v-model="dinner" value="宫爆鸡丁">宫爆鸡丁<br>
		<input type="checkbox" v-model="dinner" value="炸鸡排">炸鸡排<br>
		<input type="checkbox" v-model="dinner" value="鸡肉卷">鸡肉卷<br>
		您已选择：<span v-text="dinner.join(',')"></span>	<!-- 用,拼接数组 -->
		
		<!-- @事件.stop	阻止事件冒泡 -->
		<div style="width:100px;height:100px;background-color: cornsilk" @click="click('div')">
			div
			<button @click.stop="click('button')">点击按钮</button>
		</div>
	</div>
</body>

<script>
	new Vue({
		el : "#app",
		data : {
			name : "Vue啊",
			num : 1,
			message : "你们好！",
			word : "<h1>世界和平</h1>",
			dinner : []

		},
		methods : {
			sayhi : function(msg) {
				this.message = msg;
			},
			click : function(msg){
				console.log(msg);
			}
		},
		created : function() {
			console.log("Vue实例创建了");
		},
	});
</script>
</html>