<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="js/vue.js"></script>

</head>
<body>
	<div id="app">
		<input type="text" v-model="num" @click="num++">
		<button @click="num++">+</button><br>
		<button @click="sayhi('大家都好！')">打招呼</button>
		<h1>
			<span v-text="name"></span> Hello! <br> {{num}} 位朋友!{{message}}<br> <>
		</h1>
	</div>
</body>

<script>
	new Vue({
		el : "#app",
		data : {
			name : "vue",
			num : 1,
			message : "你们好！",
			word : "<h1>世界和平</h1>"
		},
		methods : {
			sayhi : function(msg) {
				this.message = msg;
			}
		},
		created : function() {
			console.log("Vue实例创建了");
		},
	});
</script>
</html>