<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="js/vue.js"></script>

</head>
<body>
	<div id="app">
		<h1>
			<span v-text="name"></span> Hello! <br> {{num}} 位朋友!{{message}} <br> <span v-html="word"></span>
		</h1>
		<input type="text" v-model="num" @click="num++">
		<button @click="num++">+</button>
		<br>
		<button @click="sayhi('大家都好！')">打招呼</button>
		<hr>
		请选择你的晚餐： <br>
		<input type="checkbox" v-model="" value="宫爆鸡丁">宫爆鸡丁<br>
		<input type="checkbox" value="宫爆鸡丁">宫爆鸡丁<br>
		<input type="checkbox" value="宫爆鸡丁">宫爆鸡丁<br>
		
	</div>
</body>

<script>
	new Vue({
		el : "#app",
		data : {
			name : "Vue啊",
			num : 1,
			message : "你们好！",
			word : "<h1>世界和平</h1>",
			dinner : []

		},
		methods : {
			sayhi : function(msg) {
				this.message = msg;
			}
		},
		created : function() {
			console.log("Vue实例创建了");
		},
	});
</script>
